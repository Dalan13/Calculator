<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:layout_marginTop="0.5dp">

    <TextView
        android:id="@+id/textView_history_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_history"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_input_numbers"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="30sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#B1ADAD"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_marginLeft="0.1dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_weight="1"
            android:background=""
            android:text="C"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp"
            app:backgroundTint="#070707" />

        <Button
            android:id="@+id/button_clear_last"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.1dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_weight="1"
            android:background=""
            android:text="@string/clear_last"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp"
            app:backgroundTint="#070707" />

        <Button
            android:id="@+id/button_parentheses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.1dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_weight="1"
            android:background=""
            android:text="( )"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp"
            app:backgroundTint="#040404" />

        <Button
            android:id="@+id/button_division"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.1dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_weight="1"
            android:background=""
            android:text="\u00F7"
            android:textColor="@android:color/holo_red_light"
            android:textSize="40sp"
            app:backgroundTint="#040404" />
    </LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
    android:background="#B1ADAD"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button_seven"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"
        android:background=""
        android:text="7"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:backgroundTint="#040404" />

    <Button
        android:id="@+id/button_eight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"
        android:background=""
        android:text="8"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:backgroundTint="#040404" />

    <Button
        android:id="@+id/button_nine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"
        android:background=""
        android:text="9"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:backgroundTint="#040404" />

    <Button
        android:id="@+id/button_multiplication"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"
        android:background=""
        android:text="x"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        app:backgroundTint="#040404" />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
    android:background="#B1ADAD"
android:orientation="horizontal">

    <Button
        android:id="@+id/button_four"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"

        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:backgroundTint="@color/purple_200" />

    <Button
        android:id="@+id/button_five"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"

        android:text="5"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:backgroundTint="@color/purple_200" />

    <Button
        android:id="@+id/button_six"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"

        android:text="6"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:backgroundTint="@color/purple_200" />

    <Button
        android:id="@+id/button_subtraction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"

        android:text="\u2014"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:backgroundTint="@color/purple_200" />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
    android:background="#B1ADAD"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"

        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:backgroundTint="@color/purple_200"/>

    <Button
        android:id="@+id/button_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"

        android:text="2"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:backgroundTint="@color/purple_200" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"

        android:text="3"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:backgroundTint="@color/purple_200" />

    <Button
        android:id="@+id/button_addition"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="1"

        android:text="+"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:backgroundTint="@color/purple_200" />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
    android:background="#B1ADAD"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button_zero"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.1dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_marginBottom="0.1dp"
        android:layout_weight="2"

        android:text="0"
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:backgroundTint="@color/purple_200" />

    <Button
        android:id="@+id/button_dot"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_marginBottom="0.1dp"
        android:layout_weight="1"

        android:text="."
        android:textSize="30sp"
        android:background="@color/purple_200"
        app:backgroundTint="@color/purple_200" />

    <Button
        android:id="@+id/button_equal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_marginBottom="0.1dp"
        android:layout_weight="1"
        android:background="@android:color/holo_red_dark"
        android:text="="
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:backgroundTint="@android:color/holo_red_dark" />
</LinearLayout>


</LinearLayout>
